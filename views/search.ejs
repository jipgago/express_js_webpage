    <h1>검색화면 </h1>
    <% if(hld == '책') { %>
    <form action="/book/search" method="post">
    <% } else if(hld == '캘린더') { %>
    <form action="/calendar/search" method="post">
    <% } else { %>
    <form action="/namecard/search" method="post">
    <% } %>
        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2  col-form-label"><%=kind%></label>
          <div class="col-sm-5">
            <input type="id" class="form-control" placeholder="<%= hld %> 제목을 입력하세요" name="keyword" maxlength="50" value="<%=keyword%>">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">검색</button>
    </form>
    <p>
      <% if (listyn == "Y")
         {    
      %>
            <table class="table">
      <%    var i = 0;
            while(i < bs.length) {
      %>
      <% if(kind == 'Book Search') { %>
              <tr>
                <td><img src="/images<%=bs[i].img%>" style="width:100px;height:100px; "></td> 
                <td><a href="/book_detail/<%=bs[i].id%>"><%=bs[i].name%></a></td><td><%=bs[i].author%></td><td><%=bs[i].price%>원</td>
              </tr> 
      <% } else if (kind == 'Calendar Search') { %>
              <tr>
                <td class="td td-sm">
                    <%=bs[i].title%>
                </td>
                <td>
                    <%=bs[i].description%>
                </td>
              </tr> 
        <% } else { %>
              <tr>
                <td class="td td-sm">
                    <%=bs[i].name%>
                </td>
                <td>
                    <%=bs[i].description%>
                </td>
              </tr>
        <% } %>
      <% 
             i++; 
         }  
      %>
           </table>
      <%
         } %>
    </p>