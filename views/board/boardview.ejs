
    <h1><%=kind%>  </h1> <!--내용 정의-->
    <div style = "text-align: right;width : 1100px;">
         <a href="/board/list/<%=pageNum%>"><input type="button" value="목록"></a> <!--원래 있던 페이지로 가는 경로-->
    </div>
    <table class="table">
        <tr><td style="width : 150px;">제목 : &nbsp;</td><td><%=board[0].title%></td></tr> <!--게시글 제목-->
        <tr><td style="width : 150px;">작성자 : &nbsp;</td><td><%=board[0].name%></td></tr><!--게시글 작성자-->
        <tr><td colspan = "2" ><%=board[0].content%></td></tr> <!--게시글 내용-->
    </table>
    <div style = "text-align: right;width : 1100px;">
    <% if(loggined === true && (id == board[0].loginid || id =='admin') ){ %> 
        <!--로그인이 되어있으며 아이디가 작성자거나 관리자일 때 수정과 삭제 가능하게 해주는 조건문-->
        <a href="/board/update/<%=board[0].id%>/<%=pageNum%>"><input type="button" value="수정"></a>
        <a href="/board/delete/<%=board[0].id%>/<%=pageNum%>" onclick="return confirm('삭제 하시겠습니까?')"><input type="button" value="삭제"></a>
    <% } %>
    </div>
   